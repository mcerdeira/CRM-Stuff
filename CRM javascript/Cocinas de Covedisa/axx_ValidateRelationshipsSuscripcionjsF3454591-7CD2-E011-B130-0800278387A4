  {
    var recordid1 = record1[0].id;
    var recordname1 = record1[0].name;
    var recordid2 = record2[0].id;
    var recordname2 = record2[0].name;

    var viewId = "{00000000-0000-0000-0000-000000000002}";
    var entityName = "axx_formadepago";
    
