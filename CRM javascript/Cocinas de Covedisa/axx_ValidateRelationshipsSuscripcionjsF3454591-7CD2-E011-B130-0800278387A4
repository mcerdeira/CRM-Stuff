function noBraces(guid){
  return guid.replace("{","").replace("}","")
}

function newLookupValue(id, entityType, name){
    var olookup = {id:id, entityType: entityType, name: name};
    return [olookup]
}

function customerExists(){
  var bExist = false;
  if (((Xrm.Page.getAttribute("axx_tipodecliente").getValue()==0) & (Xrm.Page.getAttribute("axx_contactid").getValue()!=null)) || (( Xrm.Page.getAttribute("axx_tipodecliente").getValue()==1) & (Xrm.Page.getAttribute("axx_accountid").getValue()!=null)))
  {bExist = true;}
  return bExist
}

function submitNullAndDisabled(field){
    Xrm.Page.getControl(field).setDisabled(true);
    Xrm.Page.getAttribute(field).setValue(null);
    Xrm.Page.getAttribute(field).setSubmitMode("always");
}

function changeCuentaContacto(){
  Xrm.Page.getAttribute("axx_tarjeta").setValue(null);
  Xrm.Page.getAttribute("axx_tarjeta").setSubmitMode("always");

  if (customerExists()==false)
  {
    Xrm.Page.getControl("axx_tarjeta").setDisabled(true);
  }
  else if (Xrm.Page.getAttribute("axx_formadepago").getValue() != null)
  {
    Xrm.Page.getControl("axx_tarjeta").setDisabled(false);
    getFormaDePago();
  }
}

function seleccionContactoCuenta(){
  if (Xrm.Page.getAttribute("axx_tipodecliente").getValue()==0)
  {
    Xrm.Page.ui.tabs.get("general").sections.get("seccioncontacto").setVisible(true);
    Xrm.Page.ui.tabs.get("general").sections.get("seccioncuenta").setVisible(false);
    Xrm.Page.getAttribute("axx_contactid").setRequiredLevel("required");
    Xrm.Page.getAttribute("axx_accountid").setRequiredLevel("none");
    Xrm.Page.getAttribute("axx_accountid").setValue(null);
  }
  else
  {
    Xrm.Page.ui.tabs.get("general").sections.get("seccioncontacto").setVisible(false);
    Xrm.Page.ui.tabs.get("general").sections.get("seccioncuenta").setVisible(true);
    Xrm.Page.getAttribute("axx_contactid").setRequiredLevel("none");
    Xrm.Page.getAttribute("axx_accountid").setRequiredLevel("required");
    Xrm.Page.getAttribute("axx_contactid").setValue(null);
  }
}

function formOnLoad()
{ 
  checkenviodiferenciado();
  promociondefaultViewId = Xrm.Page.getControl("axx_promocionid").getDefaultView();
  formadepagodefaultViewId = Xrm.Page.getControl("axx_formadepago").getDefaultView();

  if (Xrm.Page.getAttribute("axx_campanaid").getValue()==null){
    Xrm.Page.getControl("axx_promocionid").setDisabled(true);
    Xrm.Page.getControl("axx_formadepago").setDisabled(true)
  }
  else
  {
    if (Xrm.Page.getAttribute("axx_promocionid").getValue() != null)
    {
      Xrm.Page.getControl("axx_promocionid").setLabel("Promoción (Locked)");
      Xrm.Page.getControl("axx_formadepago").setLabel("Forma de Pago");
      setFormadePagoPromociónLookupFilter(false);
      setPromocionLookupFilter(false);
      getPromocion();
      promocionvaloranterior = Xrm.Page.getAttribute("axx_promocionid").getValue();
    }
  }

 if ((customerExists()==true)&(Xrm.Page.getAttribute("axx_formadepago").getValue() != null))
  {
    getFormaDePago();
    Xrm.Page.getControl("axx_tarjeta").setDisabled(false);
  }
  else
  {
    Xrm.Page.getControl("axx_tarjeta").setDisabled(true);
  }

}

function getDatosCampaniaDefault(isLoad){
  var errorMssg = "alerta!";
  
  var CampaniaId = Xrm.Page.getAttribute("axx_campanaid");
  CampaniaId = (CampaniaId.getValue()) ? CampaniaId.getValue()[0].id : null;
  
  if (!CampaniaId){return}
  
  var organizationName = Xrm.Page.context.getOrgUniqueName();
  var serverURL = window.location.protocol + "//" + window.location.hostname + ":" + window.location.port + "/" + organizationName ;

  var odataSelect = serverURL + "/xrmservices/2011/OrganizationData.svc/axx_campanaSet?" + 
      "$select=axx_campanaId,axx_ListadeMarketingDefault,axx_Negocio,axx_PromocionDefaultId&$" + 
      "filter=axx_campanaId eq guid'" + CampaniaId + "'";
  
  
  $.ajax({
    type: "GET",
    contentType: "application/json; charset=utf-8",
    datatype: "json",
    url: odataSelect,
    beforeSend: function (XMLHttpRequest) { XMLHttpRequest.setRequestHeader("Accept", "application/json"); },
    success: function (data, textStatus, XmlHttpRequest)
    {
      if(data.d.results.length == 0){
        alert(errorMssg); 
        return
      }

      //Tomo los datos de respuesta y llamo a la funcion que procesa la misma
      var axxCampania = data.d.results[0];
      DefaultCampania(axxCampania, isLoad);
     
    },
    error: function (XmlHttpRequest, textStatus, errorThrown) { alert('OData Select Failed: ' + odataSelect); }
  }); 
}

function DefaultCampania(axxCampania, isLoad){
  var promocion = Xrm.Page.getAttribute("axx_promocionid");
  var listaDeMarketing = Xrm.Page.getAttribute("axx_listademarketing");
  var negocio = Xrm.Page.getAttribute("axx_negocioid");

  var promocionRetrieved = axxCampania.axx_PromocionDefaultId;
  var listaDeMarketingRetrieved = axxCampania.axx_ListadeMarketingDefault;
  var negocioRetrieved = axxCampania.axx_Negocio;
  
  //Cargo la Lista de Marketing por defecto solo si la suscripcion no tiene ninguna
  if (listaDeMarketingRetrieved.Id != null && listaDeMarketing.getValue() == null) 
  {
    var newListaDeMarketing = newLookupValue(listaDeMarketingRetrieved.Id, listaDeMarketingRetrieved.LogicalName, listaDeMarketingRetrieved.Name);
    listaDeMarketing.setValue(newListaDeMarketing);
    listaDeMarketing.setSubmitMode("always");  
  }
    
  if(isLoad){
    //Cargo a la suscripcion la Promocion por Defecto solo si la suscripcion no tiene ninguna
    if (promocionRetrieved.Id != null && promocion.getValue() == null){
      var newPromocion = newLookupValue(promocionRetrieved.Id, promocionRetrieved.LogicalName, promocionRetrieved.Name);
      promocion.setValue(newPromocion);
      promocion.fireOnChange();    
    }
  
    //Cargo el negocio al que corresponde la Campaña solo si la suscripcion no tiene ninguno;
    if (negocioRetrieved.Id != null && negocio.getValue() == null) 
    {
      var newNegocio = newLookupValue(negocioRetrieved.Id, negocioRetrieved.LogicalName, negocioRetrieved.Name);
      negocio.setValue(newNegocio);
      negocio.setSubmitMode("always");
    }
   
  }else{
    //Cargo a la suscripcion la Promocion por Defecto 
    if (promocionRetrieved.Id != null)
    {
      var newPromocion = newLookupValue(promocionRetrieved.Id, promocionRetrieved.LogicalName, promocionRetrieved.Name);
      promocion.setValue(newPromocion);
      promocion.fireOnChange();
    }else{
      promocion.setValue(null);
    }

    //Cargo el negocio al que corresponde la Campaña;
    if (negocioRetrieved.Id != null) 
    {
      var newNegocio = newLookupValue(negocioRetrieved.Id, negocioRetrieved.LogicalName, negocioRetrieved.Name);
      negocio.setValue(newNegocio);
      negocio.setSubmitMode("always");
    }
  }
}

function changecampana() 
{
  var getAtt = Xrm.Page.getAttribute;
  var campaign = getAtt("axx_campanaid").getValue();
  
  if (typeof previousCampaign == "undefined") { previousCampaign = null;}

  if(previousCampaign != campaign)
  {
    getDatosCampaniaDefault();
    setPromocionLookupFilter(false);
    setFormadePagoLookupFilter(false);
    submitNullAndDisabled("axx_esquemadesuscripcion");
    previousCampaign = campaign;
  }

  
  if( !campaign || !campaign[0] ) //No hay campaña elegida
  {
    submitNullAndDisabled("axx_promocionid");
    submitNullAndDisabled("axx_formadepago");
    submitNullAndDisabled("axx_tarjeta");
  }
  else
  {
    Xrm.Page.getControl("axx_promocionid").setDisabled(false);
    Xrm.Page.getControl("axx_esquemadesuscripcion").setDisabled(false);
  }
}


function changepromocion() {
  var promocion = Xrm.Page.getAttribute("axx_promocionid").getValue();
  if (typeof promocionvaloranterior == "undefined"){promocionvaloranterior = null;}

  Xrm.Page.getControl("axx_promocionid").setLabel("Promoción");
  Xrm.Page.getControl("axx_formadepago").setLabel("Forma de Pago");
    
  if(promocion != promocionvaloranterior){
    submitNullAndDisabled("axx_tarjeta");
    submitNullAndDisabled("axx_formadepago");
    submitNullAndDisabled("axx_cuotas");
    
    if(promocion && promocion[0])
    {
      Xrm.Page.getControl("axx_tarjeta").setDisabled(false);
      Xrm.Page.getControl("axx_formadepago").setDisabled(false);
      Xrm.Page.getAttribute("axx_formadepago").fireOnChange();
      setFormadePagoPromociónLookupFilter(false);
      getPromocion();
    }
    else
    {
      setFormadePagoLookupFilter(false);
    }
  }
}


function changeformadepago() {
  if ((Xrm.Page.getAttribute("axx_formadepago").getValue() != null) & (Xrm.Page.getAttribute("axx_promocionid").getValue() == null))
  {
    Xrm.Page.getControl("axx_formadepago").setLabel("Forma de Pago (Locked)");
    Xrm.Page.getControl("axx_promocionid").setLabel("Promoción");
    setPromocionFormadePagoLookupFilter(false);
    setFormadePagoLookupFilter(false);
  }
  else
  {
    Xrm.Page.getControl("axx_formadepago").setLabel("Forma de Pago");
    setPromocionLookupFilter(false);
  }
  if (Xrm.Page.getAttribute("axx_formadepago").getValue() != null)
  {
    
    if (customerExists()==true)
    {
    Xrm.Page.getControl("axx_tarjeta").setDisabled(false);
    Xrm.Page.getAttribute("axx_tarjeta").setValue(null);
    Xrm.Page.getAttribute("axx_tarjeta").setSubmitMode("always");
      getFormaDePago();
    }

  }
  else
  {
    Xrm.Page.getControl("axx_tarjeta").setDisabled(true);
    Xrm.Page.getAttribute("axx_tarjeta").setValue(null);
    Xrm.Page.getAttribute("axx_tarjeta").setSubmitMode("always");
  }
}


