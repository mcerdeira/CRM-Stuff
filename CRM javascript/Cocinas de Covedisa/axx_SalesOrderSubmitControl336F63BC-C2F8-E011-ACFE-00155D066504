function CheckPayment(ExecutionObj)
{
 if(ExecutionObj.getEventArgs().getSaveMode() == 19) //Se hace SubmitOrder.
 {
  if(Xrm.Page.getAttribute('axx_paymentstatus').getValue() != null)
  {
   if(Xrm.Page.getAttribute('axx_paymentstatus').getSelectedOption().text != 'Pago') //No est치 pago.
   {
    ExecutionObj.getEventArgs().preventDefault();
    alert('No se puede realizar la acci칩n hasta que no se complete el pago del pedido.');
   }
  }
  else //No se especific칩 el pago.
  {
   ExecutionObj.getEventArgs().preventDefault();
   alert('No se puede realizar la acci칩n hasta que no se complete el pago del pedido.');
  }
 }
}